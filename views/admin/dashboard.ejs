<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">

    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="button">Edit</a>
            </div>
        </li>
    <% }) %>
</ul>